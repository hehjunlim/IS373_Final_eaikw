    <script>
        // Review Mode functionality
        (function() {
            const desktopToggle = document.getElementById('reviewModeToggle');
            const mobileToggle = document.getElementById('reviewModeToggleMobile');
            const reviewLink = document.getElementById('reviewLink');
            const reviewLinkDesktop = document.getElementById('reviewLinkDesktop');
            
            // Check initial state from localStorage
            const isReviewMode = localStorage.getItem('reviewMode') === 'true';
            
            function updateReviewMode(enabled) {
                localStorage.setItem('reviewMode', enabled);
                
                // Update both toggles
                if (desktopToggle) desktopToggle.checked = enabled;
                if (mobileToggle) mobileToggle.checked = enabled;
                
                // Show/hide review links
                if (reviewLink) {
                    reviewLink.style.display = enabled ? 'block' : 'none';
                }
                if (reviewLinkDesktop) {
                    reviewLinkDesktop.style.display = enabled ? 'flex' : 'none';
                }
                
                // Toggle body class for badge
                if (enabled) {
                    document.body.classList.add('review-mode-active');
                } else {
                    document.body.classList.remove('review-mode-active');
                }
                
                // Dispatch custom event for other pages to listen
                window.dispatchEvent(new Event('reviewModeChange'));
            }
            
            // Initialize on page load
            updateReviewMode(isReviewMode);
            
            // Add event listeners
            if (desktopToggle) {
                desktopToggle.addEventListener('change', function() {
                    updateReviewMode(this.checked);
                    
                    // Show notification
                    if (this.checked) {
                        alert('Review Mode Enabled\n\nYou can now access the submission review dashboard at /review/');
                    }
                });
            }
            
            if (mobileToggle) {
                mobileToggle.addEventListener('change', function() {
                    updateReviewMode(this.checked);
                    
                    // Show notification
                    if (this.checked) {
                        alert('Review Mode Enabled\n\nYou can now access the submission review dashboard.');
                    }
                });
            }
        })();
    </script>

