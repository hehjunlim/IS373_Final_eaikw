<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("styleGuideSubmissionForm");
    const messageDiv = document.getElementById("formMessage");

    form.addEventListener("submit", async function (e) {
      e.preventDefault();

      // Basic validation
      const description = document.getElementById("description").value;
      if (description.length < 100) {
        showMessage("Please provide a description of at least 100 characters.", "error");
        return;
      }

      // Show loading state
      const submitButton = form.querySelector('button[type="submit"]');
      const originalButtonText = submitButton.textContent;
      submitButton.disabled = true;
      submitButton.textContent = "Submitting...";

      // Collect form data
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);

      try {
        // Submit to Netlify Function
        console.log("Submitting data:", data);
        
        const response = await fetch("/.netlify/functions/submissions", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        });

        console.log("Response status:", response.status);
        console.log("Response headers:", Object.fromEntries(response.headers.entries()));

        const result = await response.json();
        console.log("Response body:", result);

        if (!response.ok) {
          // Show detailed error from server
          const errorParts = [
            "‚ùå Submission failed:",
            result.error || "Unknown error",
          ];
          
          if (result.details) {
            errorParts.push(`\n\nDetails: ${result.details}`);
          }
          
          if (result.hint) {
            errorParts.push(`\n\nüí° ${result.hint}`);
          }
          
          errorParts.push(`\n\nStatus: ${response.status}`);
          
          showMessage(errorParts.join(" "), "error");
          submitButton.disabled = false;
          submitButton.textContent = originalButtonText;
          return;
        }

        // Show success message with confirmation number
        showMessage(
          `‚úÖ Thank you for your submission!\n\nConfirmation Number: ${result.confirmationNumber}\n\nWe've received your style guide and will review it within 1-3 business days. You'll receive an email confirmation shortly.`,
          "success"
        );

        // Reset form
        setTimeout(() => {
          form.reset();
          messageDiv.style.display = "none";
          submitButton.disabled = false;
          submitButton.textContent = originalButtonText;
        }, 8000);
      } catch (error) {
        console.error("‚ùå Submission error:", error);
        console.error("Error stack:", error.stack);
        
        // Show network or parsing error
        showMessage(
          `‚ùå Network Error: ${error.message}\n\nPlease check your connection and try again. If the problem persists, contact support.\n\nError details logged to console (press F12 to view).`,
          "error"
        );
        submitButton.disabled = false;
        submitButton.textContent = originalButtonText;
      }
    });

    function showMessage(text, type) {
      messageDiv.style.display = "block";
      messageDiv.style.padding = "var(--space-lg)";
      messageDiv.style.border = "2px solid var(--swiss-black)";
      messageDiv.style.fontFamily = "var(--font-mono)";
      messageDiv.style.fontSize = "0.9rem";
      messageDiv.style.whiteSpace = "pre-wrap";
      messageDiv.style.wordWrap = "break-word";

      if (type === "success") {
        messageDiv.style.background = "#d4edda";
        messageDiv.style.color = "#155724";
      } else {
        messageDiv.style.background = "#f8d7da";
        messageDiv.style.color = "#721c24";
      }

      messageDiv.textContent = text;
      messageDiv.scrollIntoView({ behavior: "smooth", block: "nearest" });
    }
  });
</script>
