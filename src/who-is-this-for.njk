};

// Scroll animation observer
const observerOptions = {
  threshold: 0.2,
  rootMargin: '0px 0px -100px 0px'
};

const observer = new IntersectionObserver((entries) => {
  entries.forEach((entry) => {
    if (entry.isIntersecting) {
      const delay = entry.target.dataset.delay || 0;
      setTimeout(() => {
        entry.target.classList.add('visible');
      }, delay);
      observer.unobserve(entry.target);
    }
  });
}, observerOptions);

// Initialize scroll animations
document.addEventListener('DOMContentLoaded', () => {
  const circles = document.querySelectorAll('.persona-circle');
  circles.forEach(circle => {
    observer.observe(circle);
    
    // Add click handler
    circle.addEventListener('click', () => {
      const persona = circle.dataset.persona;
      openPersonaModal(persona);
    });
  });
});

// Modal functions
function openPersonaModal(personaKey) {
  const persona = personas[personaKey];
  if (!persona) return;
  
  const modal = document.getElementById('personaModal');
  const modalBody = document.getElementById('modalBody');
  
  // Build modal content
  let profileHTML = '<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 0.5rem; font-size: 0.95rem;">';
  for (const [key, value] of Object.entries(persona.profile)) {
    profileHTML += `<div><strong>${key.charAt(0).toUpperCase() + key.slice(1)}:</strong> ${value}</div>`;
  }
  profileHTML += '</div>';
  
  const goalsHTML = persona.goals.map(goal => `<li>${goal}</li>`).join('');
  const painPointsHTML = persona.painPoints.map(point => `<li>${point}</li>`).join('');
  
  modalBody.innerHTML = `
    <div class="modal-header">
      <div class="modal-icon">${persona.icon}</div>
      <h2 class="modal-title">${persona.title}</h2>
      <p class="modal-description">${persona.description}</p>
    </div>
    
    <div class="modal-section">
      <h3>Profile</h3>
      ${profileHTML}
    </div>
    
    <div class="modal-section">
      <h3>Goals</h3>
      <ul>${goalsHTML}</ul>
    </div>
    
    <div class="modal-section">
      <h3>Pain Points</h3>
      <ul style="border-left-color: var(--swiss-gray-400);">${painPointsHTML}</ul>
    </div>
    
    <div class="modal-section">
      <h3>How We Help</h3>
      <p style="font-size: 1.05rem; line-height: 1.7; background: rgba(69, 21, 22, 0.05); padding: 1.5rem; border-radius: 8px; border-left: 4px solid var(--swiss-red);">
        ${persona.howWeHelp}
      </p>
    </div>
  `;
  
  modal.style.display = 'block';
  setTimeout(() => modal.classList.add('active'), 10);
  document.body.style.overflow = 'hidden';
}

function closePersonaModal() {
  const modal = document.getElementById('personaModal');
  modal.classList.remove('active');
  setTimeout(() => {
    modal.style.display = 'none';
    document.body.style.overflow = 'auto';
  }, 300);
}

// Close modal handlers
document.addEventListener('DOMContentLoaded', () => {
  const modal = document.getElementById('personaModal');
  const closeBtn = document.getElementById('closeModal');
  
  closeBtn.addEventListener('click', closePersonaModal);
  
  modal.addEventListener('click', (e) => {
    if (e.target === modal) {
      closePersonaModal();
    }
  });
  
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal.classList.contains('active')) {
      closePersonaModal();
    }
  });
});
</script>
