{
  "name": "eleventy-portfolio",
  "version": "1.0.0",
  "description": "Professional portfolio website built with Eleventy and Nunjucks",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/css/tailwind.css -o ./_site/css/main.css --minify",
    "build:css:prod": "cross-env NODE_ENV=production tailwindcss -i ./src/css/tailwind.css -o ./_site/css/main.css --minify",
    "build:js": "node build-alpine.js",
    "watch:css": "tailwindcss -i ./src/css/tailwind.css -o ./_site/css/main.css --watch",
    "watch:js": "node build-alpine.js --watch",
    "build:eleventy": "eleventy",
    "prebuild": "npm run clean",
    "build": "npm-run-all --parallel build:css:prod build:js && npm run build:eleventy",
    "dev": "npm run build:eleventy && npm-run-all --parallel watch:css watch:js dev:eleventy",
    "dev:eleventy": "eleventy --serve --watch --port=8080",
    "serve": "eleventy --serve --port=8080",
    "start": "npm run dev",
    "clean": "rm -rf _site",
    "test": "playwright test --project=chromium",
    "test:all": "playwright test",
    "test:fast": "playwright test --grep-invert @slow --project=chromium",
    "test:slow": "RUN_SLOW_TESTS=1 playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed --project=chromium",
    "test:update": "playwright test --update-snapshots",
    "test:report": "playwright show-report",
    "test:workflow": "./tests/run-tests.sh all",
    "test:integration": "playwright test tests/integration/submission-workflow.test.js --reporter=list --project=chromium",
    "test:e2e": "playwright test tests/e2e/live-submission.test.js --reporter=list --project=chromium",
    "test:discord": "playwright test tests/integration/discord-notifications.test.js --reporter=list --project=chromium",
    "lighthouse": "lighthouse http://localhost:8080 --view --output html --output-path ./lighthouse-report.html",
    "lighthouse:ci": "lhci autorun",
    "format": "prettier --write \"**/*.{js,mjs,json,css,md,njk,html}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,mjs,json,css,md,njk,html}\" --ignore-path .gitignore",
    "lint:js": "eslint \"**/*.{js,mjs}\" --cache",
    "lint:js:fix": "eslint \"**/*.{js,mjs}\" --fix --cache",
    "lint:css": "stylelint \"**/*.css\" --cache",
    "lint:css:fix": "stylelint \"**/*.css\" --fix --cache",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!node_modules/**\" \"!_site/**\" \"!eaikw-cms/**\" \"!.sanity/**\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"!node_modules/**\" \"!_site/**\" \"!eaikw-cms/**\" \"!.sanity/**\"",
    "lint": "npm-run-all --parallel lint:js lint:css lint:md format:check",
    "lint:fix": "npm-run-all --sequential lint:js:fix lint:css:fix lint:md:fix format",
    "prepare": "husky install",
    "prevalidate": "npm run lint:fix",
    "validate": "npm-run-all build test",
    "sanity:dev": "sanity dev --port 3334",
    "sanity:build": "sanity build",
    "sanity:deploy": "sanity deploy",
    "sanity:manage": "sanity manage",
    "docker:dev": "docker compose --profile dev up --build",
    "docker:prod": "docker compose --profile production up -d --build",
    "docker:stop": "docker compose --profile dev --profile production down",
    "docker:clean": "docker compose --profile dev --profile production down -v"
  },
  "keywords": [
    "eleventy",
    "nunjucks",
    "portfolio",
    "static-site",
    "github-pages"
  ],
  "author": "Keith Williams",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-img": "^6.0.4",
    "@alpinejs/focus": "^3.15.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@headlessui/tailwindcss": "^0.2.2",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.19",
    "alpinejs": "^3.15.1",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.1.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.2.6",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdownlint-cli2": "^0.18.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^3.4.18"
  },
  "dependencies": {
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@sanity/client": "^6.0.0",
    "@sanity/vision": "^3.0.0",
    "airtable": "^0.12.2",
    "axios": "^1.6.0",
    "dotenv": "^16.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sanity": "^3.99.0",
    "styled-components": "^6.1.19",
    "web-vitals": "^5.1.0"
  }
}
